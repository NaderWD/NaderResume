@model LoginVM


<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="UTF-8">
	<meta content="width=device-width, initial-scale=1" name="viewport" />
	<title>ورود</title>

	<link rel="icon" href="/Admin/assets/images/favicon.ico" type="image/x-icon">
	<link href="/Admin/assets/css/app.min.css" rel="stylesheet">
	<link href="/Admin/assets/js/bundles/materialize-rtl/materialize-rtl.min.css" rel="stylesheet">
	<link href="/Admin/assets/css/style.css" rel="stylesheet" />
	<link href="/Admin/assets/css/pages/extra_pages.css" rel="stylesheet" />
</head>

<body class="light rtl">
	<div class="loginmain">
		<div class="loginCard">
			<div class="wrapper">
				<form id="login" tabindex="500" asp-action="Login" >
					<h3>ورود</h3>
					<div class="mail">
						<input type="email" asp-for="Email">
						<label asp-for="Email"> </label>
					</div>
					<div class="passwd">
						<input type="password" asp-for="Password">
						<label asp-for="Password"> </label>
					</div>
					<div class="submit">
						<button class="dark">ورود</button>
					</div>
					<div class="flex-c p-b-112">
						<a href="#" class="login100-social-item bg-fb">
							<i class="fab fa-facebook-f"></i>
						</a>
						<a href="#" class="login100-social-item bg-twitter">
							<i class="fab fa-twitter"></i>
						</a>
						<a href="#" class="login100-social-item bg-google">
							<i class="fab fa-google"></i>
						</a>
					</div>
				</form>
			</div>
		</div>
	</div>
	<!-- Plugins Js -->
	<script src="/Admin/assets/js/app.min.js"></script>
	<!-- Extra page Js -->
	<script src="/Admin/assets/js/pages/examples/login-register.js"></script>
</body>

</html>