@model FilterUserVM


@{
    ViewData["Title"] = "لیست کاربران";
}

<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 mb-4">
        <div class="card">
            <div class="header">
                <h2>
                    فیلترها
                </h2>
            </div>
            <div class="body">
                <form method="get" asp-action="List" id="filter-search">
                    <input type="hidden" asp-for="Page" /> 
                    <div class="row clearfix">
                        <div class="col-sm-12 col-md-4">
                            <div class="form-group form-float">
                                <div class="form-line">
                                    <input type="text" class="form-control" asp-for="FirstName">
                                    <label class="form-label" asp-for="FirstName">نام</label>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-12 col-md-4">
                            <div class="form-group form-float">
                                <div class="form-line">
                                    <input type="text" class="form-control" asp-for="LastName">
                                    <label class="form-label" asp-for="LastName">نام خانوادگی</label>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-12 col-md-4">
                            <div class="form-group form-float">
                                <div class="form-line">
                                    <input type="text" class="form-control" asp-for="Phone">
                                    <label class="form-label" asp-for="Phone">تلفن همراه</label>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-12 col-md-4">
                            <div class="form-group form-float">
                                <div class="form-line">
                                    <input type="text" class="form-control" asp-for="Email">
                                    <label class="form-label" asp-for="Email">ایمیل</label>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-12">
                            <button class="btn-success">جستجو</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>
                    فیلترها
                </h2>
            </div>
            <div class="body table-responsive">
                @if (Model != null && Model.Entities != null && Model.Entities.Any())
                {
                    <table class="table">
                        <thead>
                            <tr>
                                <th>آیدی کاربر</th>
                                <th>نام</th>
                                <th>نام خانوادگی</th>
                                <th>شماره تلفن همراه</th>
                                <th>ایمیل</th>
                                <th>تاریخ ثبت نام</th>
                                <th>وضعیت</th>
                                <th>عملیات</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in Model.Entities)
                            {
                                <tr>
                                    <th scope="row">@user.Id</th>
                                    <td>@user.FirstName</td>
                                    <td>@user.LastName</td>
                                    <td>@user.Phone</td>
                                    <td>@user.Email</td>
                                    <td>@user.CreateDate</td>
                                    <td>
                                        @if (user.IsActive)
                                        {
                                            <div class="badge col-green">فعال</div>
                                        }
                                        else
                                        {
                                            <div class="badge col-red">غیرفعال</div>
                                        }
                                    </td>
                                    <td></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <partial name="_AdminNotFound" />
                }
            </div>
        </div>
    </div>
</div>